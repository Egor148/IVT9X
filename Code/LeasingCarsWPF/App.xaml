<Application x:Class="LeasingCarsWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LeasingCarsWPF"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/NavStyles.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Styles/Colors.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Styles/Labels.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Styles/Fonts.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Styles/PrettyDataGrid.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Styles/InputStyles.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Styles/ButtonStyles.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>